pipeline {
    agent any
    
    environment {
        BackendGitUrl = "https://github.com/NUS-Korea-Society/nuskusa-backend"
        InfraGitUrl = "https://github.com/NUS-Korea-Society/nuskusa-infra-single.git"
    }
    
    stages {
        stage("Remove previous versions") {
            steps {
                sh 'rm -rf nuskusa-*'
            }
        }
        
        stage("Pull") {
            steps {
                dir("nuskusa-backend") {
                    git url: "${BackendGitUrl}", branch: "main", poll: true, changelog: true
                }
                dir("nuskusa-infra-single") {
                    git url: "${InfraGitUrl}", branch: "main", poll: true, changelog: true
                }
            }
        }
        
        stage("Move single-instance specific files") {
            steps{
                sh 'rm nuskusa-backend/docker-compose.yml'
                sh 'rm -r nuskusa-backend/codedeploy'
                sh 'mv nuskusa-infra-single/docker-compose.yml nuskusa-backend/'
                sh 'mv nuskusa-infra-single/mysql nuskusa-backend/'
                sh 'mv nuskusa-infra-single/codedeploy nuskusa-backend/'
            }
        }
        
        stage("Deploy") {
            steps {
                dir("nuskusa-backend") {
                    sh 'sudo -E docker compose down'
                    sh 'sudo -E docker compose up -d --build'
                }
            }
        }
    }
}
